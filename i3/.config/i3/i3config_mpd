#spotify controls
#bindsym XF86AudioRaiseVolume exec mpc volume +5
#bindsym XF86AudioLowerVolume exec mpc volume -5 
bindsym XF86AudioPlay exec "~/.config/i3/scripts/spotify-manager.py PlayPause"
bindsym XF86AudioStop exec "~/.config/i3/scripts/spotify-manager.py Stop"
bindsym XF86AudioPrev exec "~/.config/i3/scripts/spotify-manager.py Previous"
bindsym XF86AudioNext exec "~/.config/i3/scripts/spotify-manager.py Next"

